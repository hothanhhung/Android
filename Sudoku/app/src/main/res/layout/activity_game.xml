<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.hth.sudoku.GameActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btMenu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/pause"/>

        <TextView android:textSize="15.0sp" android:textColor="#000"
            android:id="@+id/tvLevel"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="Medium"/>

        <ImageButton
            android:id="@+id/btHint"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:src="@drawable/hint"/>
        <TextView android:textSize="15.0sp" android:textColor="#000"
            android:id="@+id/tvTime" android:padding="2.0dip"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Time : 0"
            android:layout_below="@id/btMenu" />
        <TextView android:textSize="15.0sp" android:textColor="#000"
            android:id="@+id/tvMoves" android:padding="2.0dip"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip" android:layout_marginBottom="5.0dip"
            android:layout_alignParentRight="true"
            android:text="Changes : 0"
            android:layout_below="@id/btHint"
             />
    </RelativeLayout>
    <com.hth.sudoku.PuzzleView
        android:id="@+id/puzzleView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <Button android:layout_width="0dp" android:layout_weight="1" android:onClick="btNumberClick"
                android:id="@+id/keypad_1" android:text="1"></Button>
            <Button android:layout_width="0dp" android:layout_weight="1" android:onClick="btNumberClick"
                android:id="@+id/keypad_2" android:text="2"></Button>
            <Button android:layout_width="0dp" android:layout_weight="1" android:onClick="btNumberClick"
                android:id="@+id/keypad_3" android:text="3"></Button>
            <Button android:layout_width="0dp" android:layout_weight="1" android:onClick="btNumberClick"
                android:id="@+id/keypad_4" android:text="4"></Button>
            <Button android:layout_width="0dp" android:layout_weight="1" android:onClick="btNumberClick"
                android:id="@+id/keypad_5" android:text="5"></Button>
        </TableRow>
        <TableRow>
            <Button android:layout_width="0dp" android:layout_weight="1" android:onClick="btNumberClick"
                android:id="@+id/keypad_6" android:text="6"></Button>
            <Button android:layout_width="0dp" android:layout_weight="1" android:onClick="btNumberClick"
                android:id="@+id/keypad_7" android:text="7"></Button>
            <Button android:layout_width="0dp" android:layout_weight="1" android:onClick="btNumberClick"
                android:id="@+id/keypad_8" android:text="8"></Button>
            <Button android:layout_width="0dp" android:layout_weight="1" android:onClick="btNumberClick"
                android:id="@+id/keypad_9" android:text="9"></Button>
            <Button android:layout_width="0dp" android:layout_weight="1" android:onClick="btNumberClick"
                android:id="@+id/keypad_0" android:text="Del"></Button>
        </TableRow>
    </TableLayout>
</LinearLayout>
