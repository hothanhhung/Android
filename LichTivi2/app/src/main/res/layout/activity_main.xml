<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@android:color/holo_blue_light"
            android:layout_height="35dp"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btMenu"
                android:background="@android:color/transparent"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="centerCrop"
                android:src="@drawable/menu"
                android:onClick="menuClick"/>
            <ImageButton
                android:id="@+id/btSearch"
                android:background="@android:color/transparent"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="centerCrop"
                android:src="@drawable/search"
                android:onClick="menuClick"/>
            <TextView
                android:id="@+id/tvSelectedChannel"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:text="VTV1"/>
            <ImageButton
                android:id="@+id/btFavorite"
                android:background="@android:color/transparent"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="centerCrop"
                android:src="@drawable/favorite"
                android:onClick="menuClick" />
            <ImageButton
                android:id="@+id/btFavorites"
                android:background="@android:color/transparent"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="centerCrop"
                android:src="@drawable/favorites"
                android:onClick="menuClick"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5sp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Lịch ngày:"/>
            <TextView
                android:id="@+id/tvSelectedDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="18-03-2016"/>
            <Button
                android:id="@+id/btSelectDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_rectangle"
                android:drawableLeft="@drawable/date_picker"
                android:textSize="16sp"
                android:onClick="setDate"
                android:text="Ngày"
                android:paddingEnd="10dp"
                android:paddingStart="10dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text=""/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ListView
                android:id="@+id/lvSchedules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <!-- The navigation drawer -->
    <LinearLayout
        android:id="@+id/leftNavdrawer"
        android:layout_width="260dp"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/custom_rectangle"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:drawSelectorOnTop="false"
        android:baselineAligned="false"
        android:paddingRight="5px"
        >

        <SearchView
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="Từ khóa tìm kênh"
            android:hint="Từ khóa tìm kênh"
            android:iconifiedByDefault="false" />
        <ExpandableListView
            android:id="@+id/lvChannels"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>
    </LinearLayout>
    <!-- The navigation drawer -->

    <LinearLayout
        android:id="@+id/rightNavdrawer"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:background="@drawable/custom_rectangle"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:drawSelectorOnTop="false"
        android:paddingLeft="5px">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kênh yêu thích"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="10sp" />
        <TextView
            android:id="@+id/tvNoFavorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chưa có kênh nào"
            android:paddingLeft="20sp" />
        <ListView
            android:id="@+id/lvFavorites"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true">
        </ListView>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
