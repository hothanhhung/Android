                    </a>
                </li>
            }
        </ul>
    </div>

    <div id="LocalChannels" style="display:none">
        <ul>
            @foreach (TiviOnline.Models.Channel channel in ViewBag.LocalChannels)
            {
                <li class="list_movie_image">
