<script>
    function tabClick(obj, id) {
        $(".channelGroups li").each(function( index ) {$(this).removeClass("active")});
        $("#HotChannels").hide();
        $("#VTV_VTCChannels").hide();
        $("#SCTV_HTVChannels").hide();
        $("#LocalChannels").hide();
        $("#ForeignChannels").hide();
        $("#FootballChannels").hide();
        $("#OthersChannels").hide();
        $(id).show();
        $(obj).parent().addClass("active");
    }
</script>