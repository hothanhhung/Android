<ul class="nav nav-tabs channelGroups">
    <li class="active" id="HotChannelsTab"><a href="javascript:void(0)" onclick="tabClick(1)">Hot</a></li>
    <li id="VTV_VTCChannelsTab"><a href="javascript:void(0)" onclick="tabClick(2)">VTV - VTC</a></li>
    <li id="SCTV_HTVChannelsTab"><a href="javascript:void(0)" onclick="tabClick(3)">SCTV - HTV</a></li>
    <li id="LocalChannelsTab"><a href="javascript:void(0)" onclick="tabClick(4)">Địa Phương</a></li>
    <li id="ForeignChannelsTab"><a href="javascript:void(0)" onclick="tabClick(5)">Nước Ngoài</a></li>
    <li id="FootballChannelsTab"><a href="javascript:void(0)" onclick="tabClick(6)">Bóng Đá</a></li>
    <li id="OthersChannelsTab"><a href="javascript:void(0)" onclick="tabClick(7)">Khác</a></li>
</ul>
<div class="list_channels">
    <div id="HotChannels">
        <ul>
            @foreach (TiviOnline.Models.Channel channel in ViewBag.HotChannels)
            {
                <li class="list_movie_image">
                    <a href="@Url.RouteUrl("WatchTivi", new { channel = channel.ID })">
                        <img src="@Url.Content(channel.Logo)" class="channel_img" />
                    </a>
                </li>
            }
        </ul>
    </div>
    <div id="VTV_VTCChannels" style="display:none">
        <ul>
            @foreach (TiviOnline.Models.Channel channel in ViewBag.VTV_VTCChannels)
            {
                <li class="list_movie_image">
                    <a href="@Url.RouteUrl("WatchTivi", new { channel = channel.ID })">
                        <img src="@Url.Content(channel.Logo)" class="channel_img" align="middle" />
                    </a>
                </li>
            }
        </ul>
    </div>

    <div id="SCTV_HTVChannels" style="display:none">
        <ul>
            @foreach (TiviOnline.Models.Channel channel in ViewBag.SCTV_HTVChannels)
            {
                <li class="list_movie_image">
