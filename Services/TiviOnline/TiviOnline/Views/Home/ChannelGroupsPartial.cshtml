            @foreach (TiviOnline.Models.Channel channel in ViewBag.OthersChannels)
            {
                <li class="list_movie_image">
                    <a href="@Url.RouteUrl("WatchTivi", new { channel = channel.ID })">
                        <img src="@Url.Content(channel.Logo)" class="channel_img" />
                    </a>
                </li>
            }
        </ul>
    </div>
</div>
<script>
    function tabClick(index) {
        $(".channelGroups li").each(function (index) { $(this).removeClass("active") });
        $("#HotChannels").hide();
        $("#VTV_VTCChannels").hide();
        $("#SCTV_HTVChannels").hide();
        $("#LocalChannels").hide();
        $("#ForeignChannels").hide();
        $("#FootballChannels").hide();
        $("#OthersChannels").hide();
        switch (index) {
            case 1:
                $("#HotChannels").show();
                $("#HotChannelsTab").addClass("active");
                break;
            case 2:
                $("#VTV_VTCChannels").show();
                $("#VTV_VTCChannelsTab").addClass("active");
                break;
            case 3:
                $("#SCTV_HTVChannels").show();
                $("#SCTV_HTVChannelsTab").addClass("active");
                break;
            case 4:
                $("#LocalChannels").show();
                $("#LocalChannelsTab").addClass("active");
                break;
            case 5:
                $("#ForeignChannels").show();
                $("#ForeignChannelsTab").addClass("active");
                break;
            case 6:
                $("#FootballChannels").show();
                $("#FootballChannelsTab").addClass("active");
                break;
            case 7:
                $("#OthersChannels").show();
                $("#OthersChannelsTab").addClass("active");
                break;
            default:
                $("#HotChannels").show();
                $("#HotChannelsTab").addClass("active");
                break;
        }
        $.cookie('active_channel_tab', index);
    }

    $( document ).ready(function() {
        var index = $.cookie('active_channel_tab');
        if (index === undefined) index = 1;
        else {
            index = parseInt(index);
        }
        tabClick(index)
    });
    
</script>