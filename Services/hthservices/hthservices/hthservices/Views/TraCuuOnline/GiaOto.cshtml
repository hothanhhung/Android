                    <ul class="dropdown-menu width90" aria-labelledby="dropdownMenu1">
                        <li ng-repeat="item in CacNguonGoc"><a href="javascript:void(0)" class="normal" ng-click="filter.nguonGoc=item;filterData()"> {{item}}</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-xs-6 col-md-6" style="padding-right: 0px;">
                <div class="dropdown width90 row">
                    <div class="col-xs-6 col-md-6" style="padding-right: 5px;">
                        <input type="number" class="form-control normal" style="text-align: right;" ng-model="filter.giaTu" placeholder="Giá Từ" ng-change="filterData()" />
                    </div>
                    <div class="col-xs-6 col-md-6" style="padding-right: 5px;">
                        <input type="number" class="form-control normal" style="text-align: right;"ng-model="filter.giaDen" placeholder="Giá Đến" ng-change="filterData()" />
                    </div>
