    <script>
        var hthAdsApp = angular.module('hthApp', [
            'ngMaterial', 'angularLazyImg'
        ]);
        var URL_SERVICE = "";



        hthAdsApp.controller('MainController', function PhoneListController($scope, $http) {
            $scope.CacHang = @Html.Raw(ViewBag.CacHang);
            $scope.CacLoai = @Html.Raw(ViewBag.CacLoai);
            $scope.CacNguonGoc = @Html.Raw(ViewBag.CacNguonGoc);
            $scope.CacGia = ["---Tất Cả Giá---", "< 300", "300 - 500", "500-800", ">1ty"];

            $scope.CacHang.splice(0, 0, "---Tất Cả Hãng Xe---");
            $scope.CacLoai.splice(0, 0, "---Tất Cả Loại Xe---");
            $scope.CacNguonGoc.splice(0, 0, "---Tất Cả Nguồn Gốc---");

            $scope.OrignalData = @Html.Raw(ViewBag.Data);
            $scope.Data = JSON.parse(JSON.stringify($scope.OrignalData));
            $scope.filter = {
                hang: $scope.CacHang[0],
                loai: $scope.CacLoai[0],
                nguonGoc: $scope.CacNguonGoc[0],
                gia: $scope.CacGia[0]
            };

            $scope.filterData = function () {
                $scope.Data = $scope.OrignalData.filter(function (obj) {
                    if ($scope.filter.hang != $scope.CacHang[0] && obj.HangXe != $scope.filter.hang) {
                        return false
                    }
                    if ($scope.filter.loai != $scope.CacLoai[0] && obj.LoaiXe != $scope.filter.loai) {
                        return false
                    }
                    if ($scope.filter.nguonGoc != $scope.CacNguonGoc[0] && obj.NguonGoc != $scope.filter.nguonGoc) {
                        return false
                    }
                    $scope.filter.giaTu = parseInt($scope.filter.giaTu);
                    if ($scope.filter.giaTu) {
                        if (obj.GiaNiemYet % 1 === 0) {
                            if ($scope.filter.giaTu > obj.GiaNiemYet) {
                                return false
                            }
                        }
                        else if ($scope.filter.giaTu > obj.GiaNiemYet * 1000) {
                            return false
                        }
                    }

                    $scope.filter.giaDen = parseInt($scope.filter.giaDen);
                    if ($scope.filter.giaDen) {
                        if (obj.GiaNiemYet % 1 === 0) {
                            if ($scope.filter.giaDen < obj.GiaNiemYet) {
                                return false
                            }
                        }
                        else if ($scope.filter.giaDen < obj.GiaNiemYet * 1000) {
                            return false
                        }
                    }
                    //if ($scope.filter.giaDen && $scope.filter.giaDen < obj.GiaNiemYet) {
                    //    return false
                    //}
                    return true;
                });
            }

