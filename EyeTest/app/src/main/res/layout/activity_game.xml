<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:layout_margin="0dp"
    android:orientation="vertical"
    android:background="#ffe6f0ff"
    tools:context="com.hth.eyetest.GameActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btMenuInGame"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
                android:layout_marginRight="10dp"
                android:src="@drawable/pause"/>
            <ImageButton
                android:id="@+id/btSpeaker"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
                android:src="@drawable/speaker"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/btHint"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
                android:src="@drawable/speaker_mute"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvQuestionContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:text="Tìm ký tự X"/>
                <GridView
                    android:id="@+id/grvGameContent"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_rectangle"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:horizontalSpacing="0dp"
                    android:verticalSpacing="0dp"
                    android:stretchMode="columnWidth"
                    android:listSelector="@color/colorAccent"
                    android:numColumns="18"></GridView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        ads:adSize="BANNER"
        ads:adUnitId="@string/ad_unit_id"
        android:visibility="visible" >
    </com.google.android.gms.ads.AdView>
</LinearLayout>
